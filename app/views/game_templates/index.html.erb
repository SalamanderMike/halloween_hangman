<div class="wrong">

<div class="headding">
  <p>Halloween Hangman!</p>
</div>

<div ng-show ="true">
    <button id="playButton" class="btn btn-warning" ng-click="game.secretWindow()">Play!</button>
</div>


<div id="letters">
  <div class="box"  ng-repeat="letter in game.alpha"
                    ng-click="game.showLetter(letter)" ng-hide="letter.hidden">{{letter.chr}}</div>
</div>

<div id="phrase">
  <table style="margin: 0px auto;">
    <tr>
      <td class="secret" ng-repeat="letter in game.secretDisplay track by $index" ng-show="letter.hidden">{{letter.chr}}
        <div class="underline"></div>
      </td>
    </tr>
  </table>
</div>

<div id="ghost">
  <div id="inTheMachine">
    <div id="one"></div>
    <div id="two"></div>
    <div id="three" ng-show="game.three"></div>
    <div id="four" ng-show="game.four"></div>
    <div id="five" ng-show="game.five"></div>
    <div id="six" ng-show="game.six"></div>
  </div>
</div>

<div class="construction">Our construction ghosts are currently working on this site...
  <br><b>isn't <i>that</i> exciting?</b> Please come back soon!
</div>

</div>
<!-- Holds onto HTLM to be called by Modal -->
<script type="text/ng-template" id="myModalContent.html">
  <div class="modal-header">
    <h3 class="modal-title">I am a modal!</h3>
  </div>

  <div class="modal-body">
  <input type="text" class="form-control" name="inputWindow" id="inputWindow" ng-model="modal.secretPhrase" ng-keyup="modal.hitEnter($event)" autofocus required>
  </div>

  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="modal.play()">OK</button>
    <button class="btn btn-warning" ng-click="modal.cancel()">Cancel</button>
  </div>
</script>



